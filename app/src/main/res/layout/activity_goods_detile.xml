<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.GoodsDetileActivity"
    android:background="@drawable/index_body_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/item_grid_header_arrow_icon" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:scrollbars="none">

<!--    be-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/body_cont_bg">

            <ImageView
                android:id="@+id/iv_detile_goods"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/goodsdef" />



            <LinearLayout
                android:id="@+id/line_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_detile_goods"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/tv_detile_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="德运全脂牛奶 1L*10"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:src="@drawable/circle" />
                    <TextView
                        android:id="@+id/tv_detile_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="￥99"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:src="@drawable/circle" />
                    <TextView
                        android:id="@+id/tv_detile_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="食品区"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:src="@drawable/circle" />
                    <TextView
                        android:id="@+id/tv_detile_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="澳大利亚 进口牛奶 整箱装"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/btn_detile_sub"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/tv_detile_num"
                android:background="@drawable/button_blue"
                android:text="—" />

            <TextView
                android:id="@+id/tv_detile_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_detile_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/tv_detile_num"
                android:background="@drawable/button_blue"
                android:text="+" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
<!--    en-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/footer_bg">
        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="立即购买"
            android:textColor="@android:color/white"
            android:background="@drawable/button_orange"
            android:textSize="18sp"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_addtocar"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="加入购物车"
            android:textColor="@android:color/white"
            android:background="@drawable/button_red"
            android:textSize="18sp"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>